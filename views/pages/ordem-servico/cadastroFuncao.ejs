<!DOCTYPE html>
<html lang="pt-BR">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emissão de Documentos de SST</title>
    <link href="../../css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="../../css/style.css">
  </head>

  <body>
    <header class="p-3 bg-dark text-white" style="padding: 10px !important">
      <%- include('../../partials/_header') %>
    </header>
    <section>
      <div class="container">
        <p class="lead">Cadastro de funções</p>        
        <form id="formFuncao" action="/pages/ordem-servico/cadastroFuncao" method="post">
          <div class="row g-3">
            <div class="form-group col-md-6">
              <label for="funcao">Função</label>
              <input type="text" class="form-control" name="funcao" id="funcao" placeholder="Nome da função" autofocus>
            </div>
            <div class="form-group col-md-6">
              <label for="cbo">CBO</label>
              <input type="text" class="form-control" name="cbo" id="cbo" placeholder="CBO da função">
            </div>
          </div> <!-- row end -->
          <div class="form-group">
            <button type="submit" class="btn btn-primary" id="incluir">Incluir</button>
          </div>
          <!-- alert -->
          <div class="alert alert-danger alert-size d-none" id="erroFuncao">
            <strong>Atenção!</strong> Digite o nome da função.
          </div>
          <div class="alert alert-danger alert-size d-none" id="erroCbo">
            <strong>Atenção!</strong> Digite o número do CBO.
          </div>
        </form>
        <hr>
        <p class="lead">Setores cadastrados</p>
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th class="col-1 text-center" scope="col">#</th>
              <th scope="col">Setor</th>
              <th scope="col">CBO</th>
              <th class="col-1 text-center" scope="col">Ações</th>
            </tr>
          </thead>
        
          <tbody>
        
            <% if (sqlData.lenght !=0) {
                let i=1;
                sqlData.forEach((data)=> {
              %>
        
              <tr>
                <th class="text-center" scope="row">
                  <%= i %>
                </th>
                <td> <%= data.funcao %> </td>
                <td> <%= data.cbo %> </td>
                <td class="text-center">
                  <a href="\pages\ordem-servico\edit\editarFuncao?idFuncao=<%= data.id %>"><i
                      class="fa-regular fa-pen-to-square me-1 text-body"></i></a>
                  <a href="\pages\ordem-servico\delete\deletarFuncao?idFuncao=<%= data.id %>"><i
                      class="fa-regular fa-trash-can text-body"></i></a>
                </td>
              </tr>
        
              <% i++; }); %>
                <% } else { %>
        
                  <tr>
                    <td colspan="3">Não há setores cadastrados</td>
                  </tr>
        
                  <% }; %>
          </tbody>
    </section>

    <!-- Footer -->
    <!-- <%# include('../partials/_footer') %> -->
    
    <!-- JS Scripts -->
    <%- include('../../partials/_scripts') %>
  </body>

</html>