<!DOCTYPE html>
<html lang="pt-BR">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emissão de Documentos de SST</title>
    <link href="../../css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="../../css/style.css">
  </head>

  <body>
    <header class="p-3 bg-dark text-white" style="padding: 10px !important">
      <%- include('../../partials/_header') %>
    </header>
    <section>
      <div class="container">
        <p class="lead">Emissão de Ordem de Serviço de Segurança</p>
        <form id="formEmitirOrdem" action="/pages/ordem-servico/printOrdem" method="post">
          <div class="row g-3">
            <div class="form-group col-md-4">
              <label for="setor">Setor</label>
              <select class="form-control" name="setor" id="setor"> </select>
              <option value="" disabled selected>Selecione</option>
                <%
                  if (dbSetores != 0) {
                    dbSetores.forEach((data) => {
                      %> <option value="<%- data.setor %>"><%- data.setor %></option> <%
                    });
                  } else {
                    %> <option value="NODATA">Não há setores</option> <%
                  };
                %>
              </select>
            </div>
            <div class="form-group col-md-4">
              <label for="funcao">Função</label>
              <select class="form-control" name="funcao" id="funcao">
                <option value="" disabled selected>Selecione</option>
                <%
                  if (dbFuncoes != 0) {
                    dbFuncoes.forEach((data) => {
                      %> <option value="<%- data.funcao %>"><%- data.funcao %></option> <%
                    });
                  } else {
                      %> <option value="NODATA">Não há funções</option> <%
                  };
                %>
              </select>
            </div>
            <div class="form-group col-md-4">
              <label for="cbo">CBO</label>
              <input type="text" class="form-control" name="cbo" id="cbo" placeholder="CBO da função" disabled>
            </div>
          </div> <!-- row 1 end -->

          <div class="row g-3 mt-1">
            <div class="form-group col-md-2">
              <label for="codigo">Código</label>
              <input type="number" class="form-control" name="codigo" id="codigo" placeholder="Código do colaborador">
            </div>
            <div class="form-group col-md-6">
              <label for="nome">Nome</label>
              <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome do colaborador">
            </div>
            <div class="form-group col-md-4">
              <label for="data">Data de emissão</label>
              <input type="date" class="form-control" name="data" id="data">
            </div>
          </div> <!-- row 2 end -->

          <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary" id="incluir">Incluir</button>
          </div>
          <!-- alert -->
          <div class="alert alert-danger alert-size d-none" id="erro">
            <strong>Atenção!</strong> Digite o nome da função.
          </div>
        </form>
        <hr>
      </div>
    </section>

    <!-- <%# include('../../partials/_footer') %> -->

    <!-- JS Scripts -->
    <%- include('../../partials/_scripts') %>
  </body>

</html>